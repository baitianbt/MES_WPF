<UserControl x:Class="MES_WPF.Views.SystemManagement.PermissionManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MES_WPF.Views.SystemManagement"
             xmlns:viewModels="clr-namespace:MES_WPF.ViewModels.SystemManagement"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1100">
    
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <materialDesign:Card materialDesign:ShadowAssist.Darken="True"
                             Margin="10">
            <!-- 搜索区域 -->
            <Grid Grid.Row="1"
                  Margin="16,16,16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 搜索框 -->
                <TextBox Grid.Column="0"
                         Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="请输入权限名称、编码或路径"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Height="50"
                         VerticalAlignment="Center" />

                <!-- 权限类型下拉框 -->
                <ComboBox Grid.Column="1"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="权限类型"
                          SelectedIndex="{Binding SelectedPermissionType}"
                          Width="100"
                          Margin="8,0,0,0"
                          Height="50"
                          VerticalAlignment="Center">
                    <ComboBoxItem Content="全部" />
                    <ComboBoxItem Content="菜单" />
                    <ComboBoxItem Content="按钮" />
                    <ComboBoxItem Content="数据" />
                </ComboBox>

                <!-- 搜索按钮 -->
                <Button Grid.Column="2"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#2196F3"
                        Foreground="White"
                        Content="搜索"
                        Command="{Binding SearchPermissionsCommand}"
                        Margin="8,0,0,0"
                        Height="40"
                        Width="80"
                        VerticalAlignment="Center" />

                <!-- 重置按钮 -->
                <Button Grid.Column="3"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Content="重置"
                        Command="{Binding ResetSearchCommand}"
                        Margin="8,0,0,0"
                        Height="40"
                        Width="80"
                        VerticalAlignment="Center" />
            </Grid>
        </materialDesign:Card>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- 权限树 -->
            <materialDesign:Card Grid.Column="0" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <!-- 标题 -->
                    <Grid Grid.Row="0" Margin="16,16,16,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="权限树" FontSize="16" FontWeight="Medium" VerticalAlignment="Center" />
                        
                        <Button Grid.Column="1"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                ToolTip="添加顶级权限"
                                Command="{Binding AddPermissionCommand}">
                            <materialDesign:PackIcon Kind="Plus" Height="24" Width="24" />
                        </Button>
                    </Grid>
                    
                    <!-- 树形结构 -->
                    <ScrollViewer Grid.Row="1" Margin="8,0,8,8" VerticalScrollBarVisibility="Auto">
                        <TreeView ItemsSource="{Binding PermissionTree}">
                            <TreeView.Resources>
                                <HierarchicalDataTemplate DataType="{x:Type viewModels:PermissionNode}" 
                                                          ItemsSource="{Binding Children}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Permission.PermissionName}" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,4,0" />
                                        
                                        <materialDesign:PackIcon Kind="MenuRight" 
                                                                 Visibility="{Binding Permission.PermissionType, Converter={StaticResource SanYuanConverter}, ConverterParameter='1|Visible|Collapsed'}"
                                                                 VerticalAlignment="Center"
                                                                 Width="16"
                                                                 Height="16" />
                                        
                                        <materialDesign:PackIcon Kind="ButtonCursor"
                                                                 Visibility="{Binding Permission.PermissionType, Converter={StaticResource SanYuanConverter}, ConverterParameter='2|Visible|Collapsed'}"
                                                                 VerticalAlignment="Center"
                                                                 Width="16"
                                                                 Height="16" />
                                        
                                        <materialDesign:PackIcon Kind="Database"
                                                                 Visibility="{Binding Permission.PermissionType, Converter={StaticResource SanYuanConverter}, ConverterParameter='3|Visible|Collapsed'}"
                                                                 VerticalAlignment="Center"
                                                                 Width="16"
                                                                 Height="16" />
                                        
                                        <StackPanel Orientation="Horizontal" Margin="8,0,0,0">
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding DataContext.AddChildPermissionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding Permission}"
                                                    Visibility="{Binding Permission.PermissionType, Converter={StaticResource SanYuanConverter}, ConverterParameter='1|Visible|Collapsed'}"
                                                    Width="20"
                                                    Height="20"
                                                    Padding="0"
                                                    Margin="4,0,0,0">
                                                <materialDesign:PackIcon Kind="PlusCircleOutline" Width="16" Height="16" />
                                            </Button>
                                            
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding DataContext.EditPermissionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding Permission}"
                                                    Width="20"
                                                    Height="20"
                                                    Padding="0"
                                                    Margin="4,0,0,0">
                                                <materialDesign:PackIcon Kind="PencilOutline" Width="16" Height="16" />
                                            </Button>
                                            
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding DataContext.DeletePermissionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding Permission}"
                                                    Width="20"
                                                    Height="20"
                                                    Padding="0"
                                                    Margin="4,0,0,0">
                                                <materialDesign:PackIcon Kind="DeleteOutline" Width="16" Height="16" Foreground="Red" />
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem" BasedOn="{StaticResource MaterialDesignTreeViewItem}">
                                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                                </Style>
                            </TreeView.ItemContainerStyle>
                        </TreeView>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
            
            <!-- 权限列表 -->
            <materialDesign:Card Grid.Column="1" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    
                    <!-- 操作按钮区 -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                Margin="16,16,16,8"
                                VerticalAlignment="Top">
                        <Button Content="+ 新增"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#2196F3"
                                Foreground="White"
                                Command="{Binding AddPermissionCommand}"
                                Height="36"
                                Width="80"
                                Margin="0,0,8,0" />

                        <Button Content="批量删除"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding BatchDeleteCommand}"
                                Height="36"
                                Width="80"
                                Margin="0,0,8,0" />
                    </StackPanel>

                    <!-- 权限列表 -->
                    <Border Grid.Row="1"
                            Background="White"
                            Margin="16,0,16,0"
                            CornerRadius="4"
                            BorderThickness="1"
                            BorderBrush="#EEEEEE">
                        <Grid>
                            <DataGrid ItemsSource="{Binding PermissionsView}"
                                      SelectedItem="{Binding SelectedPermission}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      RowHeight="48"
                                      Margin="0,0,0,0">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader"
                                           BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                        <Setter Property="Background"
                                                Value="#F5F5F5" />
                                        <Setter Property="Foreground"
                                                Value="#666666" />
                                        <Setter Property="FontWeight"
                                                Value="SemiBold" />
                                        <Setter Property="Padding"
                                                Value="8" />
                                        <Setter Property="Height"
                                                Value="40" />
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <!-- 权限名称 -->
                                    <DataGridTextColumn Header="权限名称"
                                                        Binding="{Binding Permission.PermissionName}"
                                                        Width="150" />

                                    <!-- 权限编码 -->
                                    <DataGridTextColumn Header="权限编码"
                                                        Binding="{Binding Permission.PermissionCode}"
                                                        Width="150" />

                                    <!-- 权限类型 -->
                                    <DataGridTemplateColumn Header="权限类型"
                                                            Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Permission.PermissionType}" Value="1">
                                                                    <Setter Property="Text" Value="菜单" />
                                                                    <Setter Property="Foreground" Value="#2196F3" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Permission.PermissionType}" Value="2">
                                                                    <Setter Property="Text" Value="按钮" />
                                                                    <Setter Property="Foreground" Value="#FF9800" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Permission.PermissionType}" Value="3">
                                                                    <Setter Property="Text" Value="数据" />
                                                                    <Setter Property="Foreground" Value="#4CAF50" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 路径 -->
                                    <DataGridTextColumn Header="路径"
                                                        Binding="{Binding Permission.Path}"
                                                        Width="120" />

                                    <!-- 排序号 -->
                                    <DataGridTextColumn Header="排序号"
                                                        Binding="{Binding Permission.SortOrder}"
                                                        Width="80" />

                                    <!-- 是否可见 -->
                                    <DataGridTemplateColumn Header="可见性"
                                                            Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding Permission.IsVisible, Mode=OneWay}"
                                                          IsEnabled="False"
                                                          HorizontalAlignment="Center" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 状态 -->
                                    <DataGridTemplateColumn Header="状态"
                                                            Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal"
                                                            VerticalAlignment="Center">
                                                    <Ellipse Width="8"
                                                             Height="8"
                                                             Margin="0,0,4,0">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Permission.Status}"
                                                                                 Value="1">
                                                                        <Setter Property="Fill"
                                                                                Value="#4CAF50" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Permission.Status}"
                                                                                 Value="2">
                                                                        <Setter Property="Fill"
                                                                                Value="#F44336" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>
                                                    <TextBlock>
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Permission.Status}"
                                                                                 Value="1">
                                                                        <Setter Property="Text"
                                                                                Value="启用" />
                                                                        <Setter Property="Foreground"
                                                                                Value="#4CAF50" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Permission.Status}"
                                                                                 Value="2">
                                                                        <Setter Property="Text"
                                                                                Value="禁用" />
                                                                        <Setter Property="Foreground"
                                                                                Value="#F44336" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 操作 -->
                                    <DataGridTemplateColumn Header="操作"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="编辑"
                                                            Style="{StaticResource MaterialDesignFlatButton}"
                                                            Foreground="#2196F3"
                                                            Command="{Binding DataContext.EditPermissionCommand, 
                                                     RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding Permission}"
                                                            Margin="0,0,8,0" />

                                                    <Button Content="删除"
                                                            Style="{StaticResource MaterialDesignFlatButton}"
                                                            Foreground="#F44336"
                                                            Command="{Binding DataContext.DeletePermissionCommand, 
                                                     RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding Permission}"
                                                            Margin="0,0,8,0" />

                                                    <Button 
                                                            Foreground="#2196F3"
                                                            Margin="0,0,8,0">
                                                        <Button.Style>
                                                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Permission.Status}" Value="1">
                                                                        <Setter Property="Content" Value="禁用" />
                                                                        <Setter Property="Command" Value="{Binding DataContext.DisablePermissionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Permission.Status}" Value="2">
                                                                        <Setter Property="Content" Value="启用" />
                                                                        <Setter Property="Command" Value="{Binding DataContext.EnablePermissionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                                <Setter Property="CommandParameter" Value="{Binding Permission}" />
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- 加载指示器 -->
                            <Grid Visibility="{Binding IsRefreshing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Background="#80FFFFFF">
                                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                             Value="0"
                                             IsIndeterminate="True"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center" />
                            </Grid>

                            <!-- 空数据提示 -->
                            <Grid Visibility="{Binding Permissions.Count, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}"
                                  Background="{DynamicResource MaterialDesignPaper}">
                                <StackPanel VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="ShieldLockOutline"
                                                             Width="48"
                                                             Height="48"
                                                             HorizontalAlignment="Center" />
                                    <TextBlock Text="暂无权限数据"
                                               FontSize="16"
                                               Margin="0,16,0,8" />
                                    <Button Content="添加权限"
                                            Command="{Binding AddPermissionCommand}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- 分页控件 -->
                    <Grid Grid.Row="2"
                          Margin="16,8,16,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 每页显示数量 -->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <TextBlock Text="共 "
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding TotalCount}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text=" 条"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>
        
        <!-- 新增/编辑权限蒙版 -->
        <materialDesign:DialogHost Grid.RowSpan="2" 
                           IsOpen="{Binding IsPermissionDialogOpen}"
                           CloseOnClickAway="False">
            <materialDesign:DialogHost.DialogContent>
                <materialDesign:Card Width="600" 
                             Padding="16" 
                             UniformCornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- 标题 -->
                        <TextBlock Grid.Row="0" 
                           Text="{Binding IsEditMode, Converter={StaticResource BooleanConverter}, ConverterParameter=编辑权限|新增权限}" 
                           FontSize="20" 
                           FontWeight="Medium" 
                           Margin="0,0,0,16" />

                        <!-- 表单内容 -->
                        <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto" 
                              MaxHeight="500">
                            <StackPanel>
                                <!-- 基本信息 -->
                                <TextBlock Text="基本信息" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,8" />

                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- 权限名称 -->
                                    <TextBox Grid.Row="0" 
                                     Grid.Column="0"
                                     Margin="0,8,8,8"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="权限名称*"
                                     Text="{Binding EditingPermission.PermissionName}" />

                                    <!-- 权限编码 -->
                                    <TextBox Grid.Row="0" 
                                     Grid.Column="1"
                                     Margin="8,8,0,8"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="权限编码*"
                                     Text="{Binding EditingPermission.PermissionCode}" />

                                    <!-- 权限类型 -->
                                    <ComboBox Grid.Row="1" 
                                      Grid.Column="0"
                                      Margin="0,8,8,8"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="权限类型*"
                                      SelectedIndex="{Binding EditingPermission.PermissionType, Converter={StaticResource IndexConverter}, ConverterParameter=-1}">
                                        <ComboBoxItem Content="菜单" />
                                        <ComboBoxItem Content="按钮" />
                                        <ComboBoxItem Content="数据" />
                                    </ComboBox>

                                    <!-- 父级权限 -->
                                    <ComboBox Grid.Row="1" 
                                      Grid.Column="1"
                                      Margin="8,8,0,8"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="父级权限"
                                      ItemsSource="{Binding ParentPermissions}"
                                      DisplayMemberPath="PermissionName"
                                      SelectedValue="{Binding SelectedParentId}"
                                      SelectedValuePath="Id" />

                                    <!-- 路径 -->
                                    <TextBox Grid.Row="2" 
                                     Grid.Column="0"
                                     Margin="0,8,8,8"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="路径"
                                     Text="{Binding EditingPermission.Path}" />

                                    <!-- 组件 -->
                                    <TextBox Grid.Row="2" 
                                     Grid.Column="1"
                                     Margin="8,8,0,8"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="组件"
                                     Text="{Binding EditingPermission.Component}" />

                                    <!-- 图标 -->
                                    <TextBox Grid.Row="3" 
                                     Grid.Column="0"
                                     Margin="0,8,8,8"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="图标"
                                     Text="{Binding EditingPermission.Icon}" />

                                    <!-- 排序号 -->
                                    <TextBox Grid.Row="3" 
                                     Grid.Column="1"
                                     Margin="8,8,0,8"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="排序号"
                                     Text="{Binding EditingPermission.SortOrder}" />

                                    <!-- 是否可见 -->
                                    <CheckBox Grid.Row="4" 
                                      Grid.Column="0"
                                      Margin="0,16,0,0"
                                      Content="是否可见"
                                      IsChecked="{Binding EditingPermission.IsVisible}" />

                                    <!-- 状态 -->
                                    <ComboBox Grid.Row="4" 
                                      Grid.Column="1"
                                      Margin="8,8,0,8"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="状态*"
                                      SelectedIndex="{Binding EditingPermission.Status, Converter={StaticResource IndexConverter}, ConverterParameter=-1}">
                                        <ComboBoxItem Content="启用" />
                                        <ComboBoxItem Content="禁用" />
                                    </ComboBox>
                                </Grid>

                                <!-- 备注 -->
                                <TextBlock Text="备注" 
                                   FontWeight="Medium" 
                                   Margin="0,8,0,8" />
                                
                                <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="备注"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="80"
                                 Text="{Binding EditingPermission.Remark}"
                                 Margin="0,8,0,8" />
                            </StackPanel>
                        </ScrollViewer>

                        <!-- 按钮区域 -->
                        <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,16,0,0">
                            <Button Content="取消" 
                            Style="{StaticResource MaterialDesignOutlinedButton}" 
                            Command="{Binding CancelEditCommand}"
                            Margin="0,0,8,0" />
                            <Button Content="保存" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#2196F3"
                            Foreground="White"
                            Command="{Binding SavePermissionCommand}" />
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
    </Grid>
</UserControl> 