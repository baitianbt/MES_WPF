<UserControl x:Class="MES_WPF.Views.EquipmentManagement.SpareView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MES_WPF.Views.EquipmentManagement"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1100">

    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card materialDesign:ShadowAssist.Darken="True"
                             Margin="10">
            <!-- 搜索区域 -->
            <Grid Grid.Row="1"
                  Margin="16,16,16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 搜索框 -->
                <TextBox Grid.Column="0"
                         Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="请输入备件编码、名称或规格搜索"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Height="50"
                         VerticalAlignment="Center" />

                <!-- 备件类型下拉框 -->
                <ComboBox Grid.Column="1"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="备件类型"
                          SelectedIndex="{Binding SelectedSpareType}"
                          Width="120"
                          Margin="8,0,0,0"
                          Height="50"
                          VerticalAlignment="Center">
                    <ComboBoxItem Content="全部" />
                    <ComboBoxItem Content="易耗品" />
                    <ComboBoxItem Content="维修件" />
                    <ComboBoxItem Content="备用件" />
                </ComboBox>

                <!-- 库存状态 -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center">
                    <CheckBox Content="仅显示库存不足"
                              IsChecked="{Binding ShowLowStockOnly}"
                              Margin="0,0,16,0" />
                    <CheckBox Content="仅显示有效备件"
                              IsChecked="{Binding ShowActiveOnly}" />
                </StackPanel>

                <!-- 开始日期 -->
                <DatePicker Grid.Column="3"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            materialDesign:HintAssist.Hint="开始日期"
                            SelectedDate="{Binding StartDate}"
                            Width="140"
                            Margin="8,0,0,0"
                            Height="50"
                            VerticalAlignment="Center" />

                <!-- 至 -->
                <TextBlock Grid.Column="4"
                           Text="至"
                           VerticalAlignment="Center"
                           Margin="8,0" />

                <!-- 结束日期 -->
                <DatePicker Grid.Column="5"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            materialDesign:HintAssist.Hint="结束日期"
                            SelectedDate="{Binding EndDate}"
                            Width="140"
                            Margin="0,0,0,0"
                            Height="50"
                            VerticalAlignment="Center" />

                <!-- 按钮区域 -->
                <StackPanel Grid.Column="6" 
                            Orientation="Horizontal" 
                            Margin="8,0,0,0">
                    <!-- 搜索按钮 -->
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#2196F3"
                            Foreground="White"
                            Content="搜索"
                            Command="{Binding SearchSparesCommand}"
                            Height="40"
                            Width="80"
                            VerticalAlignment="Center" />

                    <!-- 重置按钮 -->
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Content="重置"
                            Command="{Binding ResetSearchCommand}"
                            Margin="8,0,0,0"
                            Height="40"
                            Width="80"
                            VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                
                <!-- 操作按钮区 -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="16,0,16,8"
                            VerticalAlignment="Top">
                    <Button Content="+ 新增"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#2196F3"
                            Foreground="White"
                            Command="{Binding AddSpareCommand}"
                            Height="36"
                            Width="80"
                            Margin="0,0,8,0" />

                    <Button Content="批量删除"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding BatchDeleteCommand}"
                            Height="36"
                            Width="80"
                            Margin="0,0,8,0" />

                    <Button Content="+ 导出"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding ExportSparesCommand}"
                            Height="36"
                            Width="80" />
                </StackPanel>

                <!-- 备件列表 -->
                <Border Grid.Row="1"
                        Background="White"
                        Margin="16,0,16,0"
                        CornerRadius="4"
                        BorderThickness="1"
                        BorderBrush="#EEEEEE">
                    <Grid>
                        <DataGrid ItemsSource="{Binding SparesView}"
                                  SelectedItem="{Binding SelectedSpare}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  RowHeight="48"
                                  Margin="0,0,0,0">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader"
                                       BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                    <Setter Property="Background"
                                            Value="#F5F5F5" />
                                    <Setter Property="Foreground"
                                            Value="#666666" />
                                    <Setter Property="FontWeight"
                                            Value="SemiBold" />
                                    <Setter Property="Padding"
                                            Value="8" />
                                    <Setter Property="Height"
                                            Value="40" />
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <!-- 选择框 -->
                                <DataGridTemplateColumn Width="50">
                                    <DataGridTemplateColumn.Header>
                                        <CheckBox />
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- 备件编码 -->
                                <DataGridTextColumn Header="备件编码"
                                                    Binding="{Binding SpareCode}"
                                                    Width="120" />

                                <!-- 备件名称 -->
                                <DataGridTextColumn Header="备件名称"
                                                    Binding="{Binding SpareName}"
                                                    Width="150" />

                                <!-- 备件类型 -->
                                <DataGridTemplateColumn Header="备件类型"
                                                        Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SpareType}"
                                                                         Value="1">
                                                                <Setter Property="Text"
                                                                        Value="易耗品" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding SpareType}"
                                                                         Value="2">
                                                                <Setter Property="Text"
                                                                        Value="维修件" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding SpareType}"
                                                                         Value="3">
                                                                <Setter Property="Text"
                                                                        Value="备用件" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- 规格型号 -->
                                <DataGridTextColumn Header="规格型号"
                                                    Binding="{Binding Specification}"
                                                    Width="150" />

                                <!-- 库存数量 -->
                                <DataGridTemplateColumn Header="库存数量"
                                                        Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding StockQuantity}"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Value="True">
                                                                    <DataTrigger.Binding>
                                                                        <MultiBinding Converter="{StaticResource StockWarningConverter}">
                                                                            <Binding Path="StockQuantity" />
                                                                            <Binding Path="MinimumStock" />
                                                                        </MultiBinding>
                                                                    </DataTrigger.Binding>
                                                                    <Setter Property="Foreground"
                                                                            Value="#F44336" />
                                                                    <Setter Property="FontWeight"
                                                                            Value="Bold" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding Unit}"
                                                           Margin="4,0,0,0"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                                <!-- 最低库存 -->
                                <DataGridTextColumn Header="最低库存"
                                                    Binding="{Binding MinimumStock}"
                                                    Width="80" />

                                <!-- 单价 -->
                                <DataGridTextColumn Header="单价"
                                                    Binding="{Binding Price, StringFormat={}{0:C}}"
                                                    Width="100" />

                                <!-- 供应商 -->
                                <DataGridTextColumn Header="供应商"
                                                    Binding="{Binding Supplier}"
                                                    Width="120" />

                                <!-- 状态 -->
                                <DataGridTemplateColumn Header="状态"
                                                        MinWidth="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <Ellipse Width="8"
                                                         Height="8"
                                                         Margin="0,0,4,0">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsActive}"
                                                                             Value="True">
                                                                    <Setter Property="Fill"
                                                                            Value="#4CAF50" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsActive}"
                                                                             Value="False">
                                                                    <Setter Property="Fill"
                                                                            Value="#F44336" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <TextBlock>
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsActive}"
                                                                             Value="True">
                                                                    <Setter Property="Text"
                                                                            Value="有效" />
                                                                    <Setter Property="Foreground"
                                                                            Value="#4CAF50" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsActive}"
                                                                             Value="False">
                                                                    <Setter Property="Text"
                                                                            Value="无效" />
                                                                    <Setter Property="Foreground"
                                                                            Value="#F44336" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- 操作 -->
                                <DataGridTemplateColumn Header="操作"
                                                        Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="编辑"
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Foreground="#2196F3"
                                                        Command="{Binding DataContext.EditSpareCommand, 
                                                 RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Margin="0,0,8,0" />

                                                <Button Content="库存调整"
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Foreground="#4CAF50"
                                                        Command="{Binding DataContext.OpenStockAdjustDialogCommand, 
                                                 RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Margin="0,0,8,0" />

                                                <Button Content="使用记录"
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Foreground="#2196F3"
                                                        Command="{Binding DataContext.ViewUsageHistoryCommand, 
                                                 RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Margin="0,0,8,0" />

                                                <Button 
                                                        Foreground="#FFC107"
                                                        Margin="0,0,8,0">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                                            <Setter Property="Content" Value="禁用" />
                                                            <Setter Property="Command" Value="{Binding DataContext.DisableSpareCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                    <Setter Property="Content" Value="启用" />
                                                                    <Setter Property="Command" Value="{Binding DataContext.EnableSpareCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    <Button.CommandParameter>
                                                        <Binding Path="." />
                                                    </Button.CommandParameter>
                                                </Button>

                                                <Button Content="删除"
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Foreground="#F44336"
                                                        Command="{Binding DataContext.DeleteSpareCommand, 
                                                 RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- 加载指示器 -->
                        <Grid Visibility="{Binding IsRefreshing, Converter={StaticResource BooleanToVisibilityConverter}}"
                              Background="#80FFFFFF">
                            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                         Value="0"
                                         IsIndeterminate="True"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center" />
                        </Grid>

                        <!-- 空数据提示 -->
                        <Grid Visibility="{Binding Spares.Count, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}"
                              Background="{DynamicResource MaterialDesignPaper}">
                            <StackPanel VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Tools"
                                                         Width="48"
                                                         Height="48"
                                                         HorizontalAlignment="Center" />
                                <TextBlock Text="暂无备件数据"
                                           FontSize="16"
                                           Margin="0,16,0,8" />
                                <Button Content="添加备件"
                                        Command="{Binding AddSpareCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- 分页控件 -->
                <Grid Grid.Row="2"
                      Margin="16,8,16,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- 每页显示数量 -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <TextBlock Text="共 "
                                   VerticalAlignment="Center" />
                        <TextBlock Text="{Binding TotalCount}"
                                   VerticalAlignment="Center" />
                        <TextBlock Text=" 条"
                                   VerticalAlignment="Center"
                                   Margin="0,0,16,0" />

                        <TextBlock Text="10条/页"
                                   VerticalAlignment="Center" />
                        <materialDesign:PackIcon Kind="ChevronDown"
                                                 VerticalAlignment="Center"
                                                 Margin="4,0,0,0" />
                    </StackPanel>

                    <!-- 分页导航 -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Padding="8"
                                MinWidth="0">
                            <materialDesign:PackIcon Kind="ChevronLeft" />
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Content="1"
                                Background="#2196F3"
                                Foreground="White"
                                Padding="8"
                                MinWidth="0" />
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Content="2"
                                Padding="8"
                                MinWidth="0" />
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Content="3"
                                Padding="8"
                                MinWidth="0" />
                        <TextBlock Text="..."
                                   VerticalAlignment="Center"
                                   Margin="8,0" />
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Content="8"
                                Padding="8"
                                MinWidth="0" />

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Padding="8"
                                MinWidth="0">
                            <materialDesign:PackIcon Kind="ChevronRight" />
                        </Button>

                        <TextBlock Text="前往"
                                   VerticalAlignment="Center"
                                   Margin="8,0" />
                        <TextBox Width="40"
                                 Text="1"
                                 VerticalAlignment="Center"
                                 Margin="0,0,8,0" />
                        <TextBlock Text="页"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- 新增/编辑备件对话框 -->
        <materialDesign:DialogHost Grid.RowSpan="2" 
                         IsOpen="{Binding IsSpareDialogOpen}"
                         CloseOnClickAway="False">
            <materialDesign:DialogHost.DialogContent>
                <materialDesign:Card Width="600" 
                           Padding="16" 
                           UniformCornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- 标题 -->
                        <TextBlock Grid.Row="0" 
                         Text="{Binding IsEditMode, Converter={StaticResource BooleanConverter}, ConverterParameter=编辑备件|新增备件}" 
                         FontSize="20" 
                         FontWeight="Medium" 
                         Margin="0,0,0,16" />

                        <!-- 表单内容 -->
                        <ScrollViewer Grid.Row="1" 
                            VerticalScrollBarVisibility="Auto" 
                            MaxHeight="500">
                            <StackPanel>
                                <!-- 基本信息 -->
                                <TextBlock Text="基本信息" 
                                 FontWeight="Medium" 
                                 Margin="0,0,0,8" />

                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- 备件编码 -->
                                    <TextBox Grid.Row="0" 
                                   Grid.Column="0"
                                   Margin="0,8,8,8"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   materialDesign:HintAssist.Hint="备件编码*"
                                   Text="{Binding EditingSpare.SpareCode}" />

                                    <!-- 备件名称 -->
                                    <TextBox Grid.Row="0" 
                                   Grid.Column="1"
                                   Margin="8,8,0,8"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   materialDesign:HintAssist.Hint="备件名称*"
                                   Text="{Binding EditingSpare.SpareName}" />

                                    <!-- 备件类型 -->
                                    <ComboBox Grid.Row="1" 
                                    Grid.Column="0"
                                    Margin="0,8,8,8"
                                    Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                    materialDesign:HintAssist.Hint="备件类型*"
                                    SelectedIndex="{Binding EditingSpare.SpareType, Converter={StaticResource IndexConverter}, ConverterParameter=-1}">
                                        <ComboBoxItem Content="易耗品" />
                                        <ComboBoxItem Content="维修件" />
                                        <ComboBoxItem Content="备用件" />
                                    </ComboBox>

                                    <!-- 规格型号 -->
                                    <TextBox Grid.Row="1" 
                                   Grid.Column="1"
                                   Margin="8,8,0,8"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   materialDesign:HintAssist.Hint="规格型号"
                                   Text="{Binding EditingSpare.Specification}" />

                                    <!-- 单位 -->
                                    <TextBox Grid.Row="2" 
                                   Grid.Column="0"
                                   Margin="0,8,8,8"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   materialDesign:HintAssist.Hint="单位*"
                                   Text="{Binding EditingSpare.Unit}" />

                                    <!-- 库存数量 -->
                                    <TextBox Grid.Row="2" 
                                   Grid.Column="1"
                                   Margin="8,8,0,8"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   materialDesign:HintAssist.Hint="库存数量*"
                                   Text="{Binding EditingSpare.StockQuantity}" />

                                    <!-- 最低库存 -->
                                    <TextBox Grid.Row="3" 
                                   Grid.Column="0"
                                   Margin="0,8,8,8"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   materialDesign:HintAssist.Hint="最低库存*"
                                   Text="{Binding EditingSpare.MinimumStock}" />

                                    <!-- 单价 -->
                                    <TextBox Grid.Row="3" 
                                   Grid.Column="1"
                                   Margin="8,8,0,8"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   materialDesign:HintAssist.Hint="单价"
                                   Text="{Binding EditingSpare.Price}" />

                                    <!-- 供应商 -->
                                    <TextBox Grid.Row="4" 
                                   Grid.Column="0"
                                   Margin="0,8,8,8"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   materialDesign:HintAssist.Hint="供应商"
                                   Text="{Binding EditingSpare.Supplier}" />

                                    <!-- 采购周期 -->
                                    <TextBox Grid.Row="4" 
                                   Grid.Column="1"
                                   Margin="8,8,0,8"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   materialDesign:HintAssist.Hint="采购周期(天)"
                                   Text="{Binding EditingSpare.LeadTime}" />
                                </Grid>

                                <!-- 附加信息 -->
                                <TextBlock Text="附加信息" 
                                 FontWeight="Medium" 
                                 Margin="0,8,0,8" />

                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- 存放位置 -->
                                    <TextBox Grid.Row="0" 
                                   Grid.Column="0"
                                   Margin="0,8,8,8"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   materialDesign:HintAssist.Hint="存放位置"
                                   Text="{Binding EditingSpare.Location}" />

                                    <!-- 是否有效 -->
                                    <CheckBox Grid.Row="0" 
                                    Grid.Column="1"
                                    Margin="8,8,0,8"
                                    Content="是否有效"
                                    IsChecked="{Binding EditingSpare.IsActive}" />

                                    <!-- 备注 -->
                                    <TextBox Grid.Row="1" 
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Margin="0,8,0,8"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   materialDesign:HintAssist.Hint="备注"
                                   TextWrapping="Wrap"
                                   AcceptsReturn="True"
                                   VerticalScrollBarVisibility="Auto"
                                   Height="80"
                                   Text="{Binding EditingSpare.Remark}" />
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- 按钮区域 -->
                        <StackPanel Grid.Row="2" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right" 
                          Margin="0,16,0,0">
                            <Button Content="取消" 
                          Style="{StaticResource MaterialDesignOutlinedButton}" 
                          Command="{Binding CancelEditCommand}"
                          Margin="0,0,8,0" />
                            <Button Content="保存" 
                          Style="{StaticResource MaterialDesignRaisedButton}"
                          Background="#2196F3"
                          Foreground="White"
                          Command="{Binding SaveSpareCommand}" />
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <!-- 库存调整对话框 -->
        <materialDesign:DialogHost Grid.RowSpan="2" 
                         IsOpen="{Binding IsStockAdjustDialogOpen}"
                         CloseOnClickAway="False">
            <materialDesign:DialogHost.DialogContent>
                <materialDesign:Card Width="400" 
                           Padding="16" 
                           UniformCornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- 标题 -->
                        <TextBlock Grid.Row="0" 
                         Text="库存调整" 
                         FontSize="20" 
                         FontWeight="Medium" 
                         Margin="0,0,0,16" />

                        <!-- 表单内容 -->
                        <StackPanel Grid.Row="1">
                            <!-- 备件信息 -->
                            <TextBlock Text="{Binding SelectedSpare.SpareName}" 
                             FontWeight="Medium" 
                             Margin="0,0,0,8" />

                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- 当前库存 -->
                                <TextBlock Grid.Row="0"
                                           Grid.Column="1"
                                           Margin="0,8,0,8"
                                           VerticalAlignment="Center">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource StockDisplayConverter}">
                                            <Binding Path="SelectedSpare.StockQuantity" />
                                            <Binding Path="SelectedSpare.Unit" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <!-- 最低库存 -->
                                <TextBlock Grid.Row="1" 
                                 Grid.Column="0"
                                 Text="最低库存："
                                 Margin="0,8,8,8"
                                 VerticalAlignment="Center" />
                                <TextBlock Grid.Row="1" 
                                 Grid.Column="1"
                                 Text="{Binding SelectedSpare.MinimumStock}"
                                 Margin="0,8,0,8"
                                 VerticalAlignment="Center" />
                            </Grid>

                            <!-- 调整数量 -->
                            <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                           materialDesign:HintAssist.Hint="调整数量 (正数增加，负数减少)"
                           Text="{Binding AdjustQuantity}"
                           Margin="0,8,0,8" />

                            <!-- 调整原因 -->
                            <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                           materialDesign:HintAssist.Hint="调整原因"
                           Text="{Binding AdjustReason}"
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           VerticalScrollBarVisibility="Auto"
                           Height="80"
                           Margin="0,8,0,8" />
                        </StackPanel>

                        <!-- 按钮区域 -->
                        <StackPanel Grid.Row="2" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right" 
                          Margin="0,16,0,0">
                            <Button Content="取消" 
                          Style="{StaticResource MaterialDesignOutlinedButton}" 
                          Command="{Binding CancelStockAdjustCommand}"
                          Margin="0,0,8,0" />
                            <Button Content="保存" 
                          Style="{StaticResource MaterialDesignRaisedButton}"
                          Background="#2196F3"
                          Foreground="White"
                          Command="{Binding SaveStockAdjustCommand}" />
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <!-- 使用记录对话框 -->
        <materialDesign:DialogHost Grid.RowSpan="2" 
                         IsOpen="{Binding IsUsageHistoryDialogOpen}"
                         CloseOnClickAway="False">
            <materialDesign:DialogHost.DialogContent>
                <materialDesign:Card Width="700" 
                           Padding="16" 
                           UniformCornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- 标题 -->
                        <TextBlock Grid.Row="0" 
                         Text="{Binding SelectedSpare.SpareName, StringFormat={}备件使用记录 - {0}}" 
                         FontSize="20" 
                         FontWeight="Medium" 
                         Margin="0,0,0,16" />

                        <!-- 使用记录列表 -->
                        <Border Grid.Row="1"
                        Background="White"
                        CornerRadius="4"
                        BorderThickness="1"
                        BorderBrush="#EEEEEE"
                        MinHeight="300">
                            <DataGrid ItemsSource="{Binding UsageHistory}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0"
                              Background="Transparent"
                              RowHeight="48"
                              Margin="0,0,0,0">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader"
                                   BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                        <Setter Property="Background"
                                        Value="#F5F5F5" />
                                        <Setter Property="Foreground"
                                        Value="#666666" />
                                        <Setter Property="FontWeight"
                                        Value="SemiBold" />
                                        <Setter Property="Padding"
                                        Value="8" />
                                        <Setter Property="Height"
                                        Value="40" />
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <!-- 使用时间 -->
                                    <DataGridTextColumn Header="使用时间"
                                            Binding="{Binding UsageTime, StringFormat=yyyy-MM-dd HH:mm:ss}"
                                            Width="150" />

                                    <!-- 使用类型 -->
                                    <DataGridTemplateColumn Header="使用类型"
                                                Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding UsageType}"
                                                                     Value="1">
                                                                    <Setter Property="Text"
                                                                    Value="更换" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding UsageType}"
                                                                     Value="2">
                                                                    <Setter Property="Text"
                                                                    Value="添加" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding UsageType}"
                                                                     Value="3">
                                                                    <Setter Property="Text"
                                                                    Value="消耗" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 使用数量 -->
                                    <DataGridTextColumn Header="使用数量"
                                            Binding="{Binding Quantity}"
                                            Width="100" />

                                    <!-- 维护执行ID -->
                                    <DataGridTextColumn Header="维护执行ID"
                                            Binding="{Binding MaintenanceExecutionId}"
                                            Width="100" />

                                    <!-- 操作员ID -->
                                    <DataGridTextColumn Header="操作员ID"
                                            Binding="{Binding OperatorId}"
                                            Width="100" />

                                    <!-- 备注 -->
                                    <DataGridTextColumn Header="备注"
                                            Binding="{Binding Remark}"
                                            Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>

                        <!-- 按钮区域 -->
                        <Button Grid.Row="2" 
                      Content="关闭" 
                      Style="{StaticResource MaterialDesignOutlinedButton}" 
                      Command="{Binding CloseUsageHistoryCommand}"
                      HorizontalAlignment="Right"
                      Margin="0,16,0,0" />
                    </Grid>
                </materialDesign:Card>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
    </Grid>
</UserControl>
